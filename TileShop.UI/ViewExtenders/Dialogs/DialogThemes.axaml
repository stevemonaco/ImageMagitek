    <ControlTheme x:Key="{x:Type dialogs:OverlayDialog}" TargetType="dialogs:OverlayDialog">
        <Setter Property="IsVisible" Value="False" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Template">
            <ControlTemplate>
                <!--  Overlay backdrop  -->
                <Border x:Name="PART_Overlay" Background="#80000000">
                    <Grid>
                        <!--  Dialog card  -->
                        <Border x:Name="PART_DialogCard" MinWidth="320" MaxWidth="600" MaxHeight="800" HorizontalAlignment="Center"
                            VerticalAlignment="Center" Background="{DynamicResource SemiColorBackground2}"
                            BorderBrush="{DynamicResource SemiColorBorder}" BorderThickness="1" BoxShadow="0 8 24 0 #40000000"
                            CornerRadius="8" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>

                            <Grid RowDefinitions="Auto,*,Auto">
                                <!--  Header  -->
                                <Border Grid.Row="0" Padding="24,20,24,16" BorderBrush="{DynamicResource SemiColorBorder}"
                                    BorderThickness="0,0,0,1">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <!--  Mode Icon  -->
                                        <PathIcon x:Name="PART_ModeIcon" Width="24" Height="24" Margin="0,0,12,0" VerticalAlignment="Center"
                                            IsVisible="False" />

                                        <!--  Title  -->
                                        <TextBlock Grid.Column="1" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold"
                                            Text="{TemplateBinding Title}" TextWrapping="Wrap" />
                                    </Grid>
                                </Border>

                                <!--  Content area  -->
                                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                    <ContentPresenter Margin="24,16" Content="{TemplateBinding DialogContent}" />
                                </ScrollViewer>

                                <!--  Button bar  -->
                                <Border Grid.Row="2" Padding="24,16,24,20">
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Spacing="12">
                                        <Button x:Name="PART_CancelButton" MinWidth="80" Classes="Tertiary" Content="{TemplateBinding CancelText}"
                                            IsVisible="{TemplateBinding ShowCancelButton}" />
                                        <Button x:Name="PART_AcceptButton" MinWidth="80" Classes="Primary" Content="{TemplateBinding AcceptText}"
                                            IsEnabled="{TemplateBinding IsAcceptEnabled}" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>

        <!--  Mode: Info  -->
        <Style Selector="^[Mode=Info] /template/ PathIcon#PART_ModeIcon">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Data" Value="{StaticResource DialogInfoIconGlyph}" />
            <Setter Property="Foreground" Value="{DynamicResource SemiBlue6}" />
        </Style>

        <!--  Mode: Warning  -->
        <Style Selector="^[Mode=Warning] /template/ PathIcon#PART_ModeIcon">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Data" Value="{StaticResource DialogWarningIconGlyph}" />
            <Setter Property="Foreground" Value="{DynamicResource SemiOrange6}" />
        </Style>

        <!--  Mode: Error  -->
        <Style Selector="^[Mode=Error] /template/ PathIcon#PART_ModeIcon">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Data" Value="{StaticResource DialogErrorIconGlyph}" />
            <Setter Property="Foreground" Value="{DynamicResource SemiRed6}" />
        </Style>

        <!--  Mode: Question  -->
        <Style Selector="^[Mode=Question] /template/ PathIcon#PART_ModeIcon">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Data" Value="{StaticResource DialogQuestionIconGlyph}" />
            <Setter Property="Foreground" Value="{DynamicResource SemiBlue6}" />
        </Style>

        <!--  Mode: Success  -->
        <Style Selector="^[Mode=Success] /template/ PathIcon#PART_ModeIcon">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Data" Value="{StaticResource DialogSuccessIconGlyph}" />
            <Setter Property="Foreground" Value="{DynamicResource SemiGreen6}" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type dialogs:DialogHost}" TargetType="dialogs:DialogHost">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <!--  Main content  -->
                    <ContentPresenter x:Name="PART_ContentPresenter" Content="{TemplateBinding HostContent}" />

                    <!--  Dialog layers container  -->
                    <Panel x:Name="PART_LayersPanel" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

</ResourceDictionary>
