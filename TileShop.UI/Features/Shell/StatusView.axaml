<UserControl
    x:Class="TileShop.UI.Views.StatusView"
    x:DataType="vm:StatusViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:vm="using:TileShop.UI.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid ColumnDefinitions="auto,*,auto,*,auto" Margin="8,0,8,0">
        <TextBlock Grid.Column="0" Text="{ReflectionBinding Editors.ActiveEditor.ActivityMessage}" />
        <TextBlock Grid.Column="2" Text="{ReflectionBinding Editors.ActiveEditor.PendingOperationMessage}" />
        <TextBlock Grid.Column="4" Text="{Binding StatusMessage}" />
    </Grid>

</UserControl>
