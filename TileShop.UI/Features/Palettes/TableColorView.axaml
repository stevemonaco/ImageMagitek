<UserControl x:Class="TileShop.UI.Views.TableColorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:TileShop.UI.ViewModels"
    x:DataType="vm:TableColorViewModel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" MinWidth="300" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0,0,16,0">
            <Button Width="65" Height="65" Margin="0,0,0,10" HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Command="{Binding SaveColorCommand}"
                IsEnabled="{Binding CanSave}"
                IsVisible="{Binding !IsReadOnly}">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center" Text="Assign" />
                    <TextBlock HorizontalAlignment="Center" Text="Color" />
                </StackPanel>
            </Button>

            <Border Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black"
                BorderThickness="2">
                <Rectangle Width="61" Height="61">
                    <Rectangle.Fill>
                        <SolidColorBrush Color="{Binding Color}" />
                    </Rectangle.Fill>
                </Rectangle>
            </Border>
        </StackPanel>

        <!--  Color Table  -->
        <ItemsRepeater Grid.Column="1" ItemsSource="{Binding AvailableColors}">
            <ItemsRepeater.Layout>
                <UniformGridLayout MaximumRowsOrColumns="16" MinColumnSpacing="0" MinItemWidth="38" Orientation="Horizontal" />
            </ItemsRepeater.Layout>

            <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="vm:TableColorViewModel">
                    <Border Name="ColorBorder" Margin="1" Padding="0" BorderBrush="Black" BorderThickness="2"
                        Cursor="Hand" Tapped="OnColorTapped">
                        <Rectangle Width="34" Height="32">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding Color}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </Border>
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>

    </Grid>
</UserControl>
