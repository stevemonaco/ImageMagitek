<Styles x:Class="TileShop.UI.Controls.TileShopTheme"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Re-templates and alternate looks  -->
                <MergeResourceInclude Source="avares://TileShop.UI.Controls/Theme/ClearButton.axaml" />
                <MergeResourceInclude Source="avares://TileShop.UI.Controls/Theme/SlidingToggleSwitch.axaml" />

                <MergeResourceInclude Source="avares://TileShop.UI.Controls/Theme/NumericUpDown/ButtonSpinner.axaml" />
                <MergeResourceInclude Source="avares://TileShop.UI.Controls/Theme/NumericUpDown/NumericUpDown.axaml" />

                <!--  Custom controls  -->
                <MergeResourceInclude Source="avares://TileShop.UI.Controls/Dialogs/OverlayDialog.axaml" />
                <MergeResourceInclude Source="avares://TileShop.UI.Controls/SegmentedControl/SegmentedControl.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <StyleInclude Source="avares://TileShop.UI.Controls/Styles/Typography.axaml" />
    <StyleInclude Source="avares://TileShop.UI.Controls/Styles/NumericUpDownStyles.axaml" />
</Styles>
